let i=0;
function type(){
    if(i<text.length){
        document.getElementById("typing").innerText+=text.charAt(i);
        i++;
        setTimeout(type,20);
    }
}
type();

/* LOVE COUNTER */
let start=new Date("2026-01-11"); 
setInterval(()=>{
    let now=new Date();
    let diff=Math.floor((now-start)/(1000*60*60*24));
    document.getElementById("counter").innerText=`Together for ${diff} days ‚ù§Ô∏è`;
},1000);
